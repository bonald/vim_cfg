BLD_DIR=$(SDK_DIR)/build.$(CPU).$(VER)
OBJ_DIR=$(BLD_DIR)/obj.$(BOARD)/zebra_ctccli/src/
include $(MK_DIR)/sys_vx.mk


CPPFLAGS += -I$(SDK_DIR)/kal/include
CPPFLAGS += -I$(SDK_DIR)/zebra_ctccli/include 
CPPFLAGS += -I$(SDK_DIR)/zebra_ctccli/src


SRC =  $(wildcard *.c)
OBJS = $(patsubst %.c,%.o,$(wildcard *.c))
DEPS = $(patsubst %.c,%.d,$(wildcard *.c))

all: $(OBJS)

$(OBJS): %.o: %.c 
	$(shell mkdir -p $(OBJ_DIR))
	@echo "CC  => $(subst $(BLD_DIR),build.$(CPU).$(VER),$@)" && \
	$(CC) $(CFLAGS) $(CPPFLAGS) -c -o $(OBJ_DIR)/$@ $< 
	
$(OBJ_DIR)/$(DEPS): $(SRC) 
	$(shell mkdir -p $(dir $@))
	@echo "CX  => $(subst $(BLD_DIR),build.$(CPU).$(VER),$(@:%.d=%.o))" && \
	$(CC) $(CFLAGS) $(CPPFLAGS) -MM $<>$@

#include $(OBJ_DIR)/$(DEPS)	

.PHONY: clean
clean:
	rm -rf $(OBJ_DIR)/$(OBJS) $(OBJ_DIR)/$(DEPS)

CFLAGS += -Werror -Wall -I$(SDK_DIR)/zebra_ctccli/include
